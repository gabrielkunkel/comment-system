{
  "name": "typescript-mocha-graphql",
  "version": "1.0.0",
  "description": "a tested node graphql server",
  "main": "index.js",
  "scripts": {
    "test": "mocha --watch --watch-extensions ts --require ts-node/register ./server/test/*.ts",
    "build": "cd server && tsc --watch",
    "server": "nodemon ./server/dist/index.js",
    "start": "concurrently \"npm run build\" \"npm run server\""
  },
  "keywords": [
    "graphql",
    "mocha",
    "chai",
    "typescript"
  ],
  "author": "gabrielkunkel",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "mongoose": "^5.8.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.17",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "concurrently": "^5.0.1",
    "mocha": "^6.2.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  }
}
